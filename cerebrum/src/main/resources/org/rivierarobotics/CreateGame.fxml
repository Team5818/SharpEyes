<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" rowValignment="BASELINE">
         <children>
            <Label alignment="CENTER" style="-fx-alignment: center;" text="Game Name:">
               <font>
                  <Font size="16.0" />
               </font>
               <FlowPane.margin>
                  <Insets right="5.0" />
               </FlowPane.margin>
            </Label>
            <TextField fx:id="gameName" promptText="Name" />
         </children>
      </FlowPane>
      <VBox alignment="TOP_CENTER">
         <children>
            <VBox fx:id="fields" alignment="TOP_CENTER" />
            <Label fx:id="addNewFieldLabelButton" style="-fx-background-color: rgba(143, 244, 66, 70); -fx-background-radius: 10;" text="Add New Field" textAlignment="CENTER" VBox.vgrow="NEVER">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      <Button fx:id="submit" alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: rgb(30, 200, 100);" text="Create Game">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
